<html metal:use-macro="context/@@base.tmpl/index/macros/base"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
	  xmlns:metal="http://xml.zope.org/namespaces/metal">


<!--! <%inherit file="base.tmpl"/> -->
<!--! <%namespace name="feeds_translations" file="feeds_translations_helper.tmpl" import="*"/> -->

<metal:block fill-slot="extra_head">
    <!--! ${feeds_translations.head(kind=kind, feeds=False)} -->
</metal:block>

<metal:block fill-slot="content">
<article class="authorindex"  tal:condition="options/items"
         tal:define="messages nocall:options/messages">
        <h2>${python:messages("Authors")}</h2>
        <div class="metadata">
            <!--! ${feeds_translations.translation_link(kind)} -->
        </div>
        <ul class="postlist"
            tal:define="hidden_authors options/hidden_authors">
          <li tal:repeat="text_link options/items"
              tal:omit-tag="python:text_link[0] in hidden_authors">
            <a class="reference listtitle"
               tal:define="link python:text_link[1]; text python:text_link[0]"
               href="${link}">${text}</a>
          </li>
        </ul>
</article>
</metal:block>
</html>
