<metal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
			 xmlns:metal="http://xml.zope.org/namespaces/metal"
			 xmlns:i18n="http://xml.zope.org/namespaces/i18n"
			 define-macro="base">
	<metal:block define-slot="doctype"><tal:doctype tal:replace="structure string:&lt;!DOCTYPE html &gt;" /></metal:block>

<!--!
Note that we're hardcoding to use_open_graph with twitter cards.
Not also that we're dropping rtl support.
Also dropping translation support.
-->

<html prefix="og: http://ogp.me/ns# article: http://ogp.me/ns/article# "
      vocab="http://ogp.me/ns"
	  lang="options/lang">

  <head metal:use-macro="macro:html_headstart" />

  <body tal:define="messages nocall:options/messages">
      <a href="#content" class="sr-only sr-only-focusable">${python:messages("Skip to main content")}</a>
      <div id="container">
		  <metal:block metal:use-macro="macro:html_header" />
          <main id="content">
			  <div metal:define-slot="content" />
          </main>
         <!--! ${footer.html_footer()} -->
      </div>
	  <div metal:use-macro="macro:late_load_js" />


    <script
		src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.2/baguetteBox.min.js"
		tal:condition="options/use_cdn" />
    <script src="/assets/js/baguetteBox.min.js"
			tal:condition="not:options/use_cdn" />

	<div metal:define-slot="extra_js" />

    <script>baguetteBox.run('a.reference', {
        captions: function(element) {
            return element.getElementsByTagName('img')[0].alt;
    }});</script>
    <!--! ${body_end} -->
    <!--! ${template_hooks['body_end']()} -->
</body>

</html>
</metal:block>
