<html metal:use-macro="context/@@base.tmpl/index/macros/base"
	  xmlns:metal="http://xml.zope.org/namespaces/metal"
	  xmlns:tal="http://xml.zope.org/namespaces/tal"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<!-- <%inherit file="list_post.tmpl"/> --> <!-- doesn't seem to matter -->
<!-- <%namespace name="feeds_translations" file="feeds_translations_helper.tmpl" import="*"/> -->

<metal:block metal:fill-slot="extra_head"
             tal:define="kind options/kind; tag options/tag;">
  <metal:block tal:replace="structure python:request.feed_translations_head(tag,
                            kind, rss_override=False)"/>
</metal:block>


<article class="tagpage" metal:fill-slot="content">
    <header>
        <h1>${options/title}</h1>
        <p tal:condition="options/description">${description}</p>
		<tal:block tal:condition="options/subcategories|nothing">
		<span i18n:translate="">Subcategories:</span>
        <ul>
			<li tal:repeat="cat options/subcategories">
				<a href="${python:cat[1]}">${python:cat[0]}</a>
			</li>

        </ul>
        </tal:block>
        <div class="metadata"
             tal:define="tag options/tag;
                         kind options/kind;"
             tal:content="structure python:request.feed_link(tag, kind=kind)">
        </div>
        <!--! ${feeds_translations.translation_link(kind)} -->
    </header>
    <metal:block use-macro="macro:html_posts_postlist" />
</article>
</html>
